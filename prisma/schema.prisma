generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id        String   @id @default(cuid())
  name      String
  imageUrl  String   @db.Text
  latitude  Float
  longitude Float
  zoom      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  islands   Island[]
  places    Place[]

  @@map("countries")
}

model Island {
  id        String   @id @default(cuid())
  countryId String
  name      String
  imageUrl  String   @db.Text
  latitude  Float
  longitude Float
  zoom      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  country   Country  @relation(fields: [countryId], references: [id])
  cities    City[]
  places    Place[]

  @@map("islands")
}

model City {
  id        String   @id @default(cuid())
  countryId String
  islandId  String
  name      String
  imageUrl  String   @db.Text
  latitude  Float
  longitude Float
  zoom      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  island    Island   @relation(fields: [islandId], references: [id])
  places    Place[]

  @@map("cities")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  places    Place[]

  @@map("categories")
}

model Place {
  id          String       @id @default(cuid())
  countryId   String
  islandId    String
  cityId      String
  categoryId  String
  title       String
  slug        String       @unique
  description String       @db.Text
  imageUrl    String       @db.Text
  latitude    Float
  longitude   Float
  zoom        Float
  address     String       @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  country     Country      @relation(fields: [countryId], references: [id])
  island      Island       @relation(fields: [islandId], references: [id])
  city        City         @relation(fields: [cityId], references: [id])
  category    Category     @relation(fields: [categoryId], references: [id])
  images      PlaceImage[]

  @@index([countryId, islandId, cityId])
  @@map("places")
}

model PlaceImage {
  id          String   @id @default(cuid())
  placeId     String
  url         String   @db.Text
  title       String
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  place       Place    @relation(fields: [placeId], references: [id])

  @@map("placeImages")
}
